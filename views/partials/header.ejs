<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>Karpool</title>
  </head>
  <body>

	<header id="header">
	<div id="leftMenu" class = "header">
		<input type="checkbox" id="check">
		<label for="check">
		<div id="menuicon" onclick="this.classList.toggle('change')">
			<div id="mi1"></div>
			<div id="mi2"></div>
			<div id="mi3"></div>
		</div>
		</label>
		<div class="sidebar">
			<header>Menu</header>
			<a href="../private/registerVehicle.ejs" class="active">
				<div></div> <!--buffers-->
				<span>Register Vehicle</span>
			</a>
			<a href="../private/homepage.ejs">
				<div></div>
				<span>Dashboard</span>
			</a>
			<a href="../public/joinpool.ejs">
				<div></div>
				<span>Join a Karpool</span>
			</a>
		</div>
	</div>
	<button id = "genbutton1" class="genbutton hidden">Sign Up</button>
	<button id = "genbutton2" class="genbutton hidden">Log In</button>
  <div id="logodiv" class = "header">
    <img id="logo" src="/public/karpool.png" onclick = "goTo('/public/homepage.ejs')">
  </div>
	</header>
  <script>

		document.addEventListener("scroll", function() {
			console.log("scrol")
			const gb1 = document.getElementById('genbutton1');
			const gb2 = document.getElementById('genbutton2');
  		if (window.scrollY == 0) {
				hideshow(gb1, "on"); hideshow(gb2, "on");
  		} else {
				hideshow(gb1, "off"); hideshow(gb2, "off");
			}
		});
		function hideshow(t, d) {
			if (t.classList.contains('hidden') && (d == "off")) {
				t.style.webkitAnimationName = 'show';
				t.style.webkitAnimationDuration = '0.5s';
				t.classList.toggle('hidden');
			} else if (!t.classList.contains('hidden') && (d == "on")) {
				t.style.webkitAnimationName='hide';
				t.style.webkitAnimationDuration = '0.5s';
				setTimeout(function(){t.classList.toggle('hidden');}, 500);
			}
		}
    const logoJS = document.getElementById('logo');
    logoJS.style.width = "100px";
    logoJS.style.height = "auto";
    function goTo(website) {
      location.href = website;
    }
  </script>
</body>
<style>
html {
  height: 100%;
  width: 100%;
}

#check {
	visibility: hidden;
}
#menuicon {
	position: fixed;
	left: 10px;
	display: inline-block;
	cursor: pointer;
	margin-top: 15px;
	margin-left: 15px;
	transition: 0.5s;
}
#mi1, #mi2, #mi3 {
  width: 25px;
  height: 3px;
  background-color: #333;
  margin: 6px 0;
  transition: 0.4s;
}
.sidebar {
	position: fixed;
	width: 240px;
	left: -240px;
	height: 100%;
	background-color: #fff;
	transition: all .5s ease;
}
.sidebar header{
	font-size: 28px;
	color: darkslategray;
	line-height: 70px;
	text-align: center;
	background-color: #fff;
	user-select: none;
}

.sidebar a{
	display: block;
	height: 65px;
	width: 100%;
	color: darkslategray;
	line-height: 65px;
	padding-left: 30px;
	box-sizing: border-box;
	text-decoration: none;
	border-left: 5px solid transparent;
	transition: all .5s ease;
}

sidebar a.active, sidebar a:hover {
	border-left: 5px darkgray;
	color: #fff;
	background: gray;
}

.sidebar a i {
	font-size: 23px;
	margin-right: 16px;
}
.sidebar a span {
	letter-spacing: 1px;
	text-transform: uppercase;
}

#check:checked ~ .sidebar{
	left: 0;
}
#check:checked ~ label #menuicon {
	margin-left: 245px;
	visibility: visible;
}

@-webkit-keyframes show {
	from {opacity: 0%;}
	to {opacity: 100%;}
}
@-webkit-keyframes hide {
	from {opacity: 100%;}
	to {opacity: 0%;}
}
#logodiv {
	position: fixed;
	right: 10px;;
	margin-top: 20px;
	margin-right: 10px;
	cursor: pointer;
}


.change #mi1 {
  transform: translate(0, 9px) rotate(-45deg);
}

.change #mi2 {opacity: 0;}

.change #mi3 {
  transform: translate(0, -9px) rotate(45deg);
}
#header {
	display: flex;
	flex-flow: row wrap;
	justify-content: space-around;
}

.genbutton {
	position: fixed;
	top: 30px;
	height: 20px;
}
#genbutton1 {
	left: 25%
}
#genbutton2 {
	right: 35%
}

.hidden {
	visibility: hidden;
}
</style>
</html>
